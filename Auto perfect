-- Auto Perfect toggle script (toggle on/off each time it's run)

if getgenv().AutoPerfectToggle then
    -- Disable if already enabled
    for _, conn in pairs(getgenv().AutoPerfectConnections or {}) do
        pcall(function() conn:Disconnect() end)
    end
    getgenv().AutoPerfectConnections = nil

    -- Re-enable original shoot button scripts
    local Players = game:GetService("Players")
    local player = Players.LocalPlayer
    local playerGui = player:WaitForChild("PlayerGui")
    local shootButton = playerGui:WaitForChild("Mobile"):WaitForChild("Offense"):WaitForChild("Shoot")

    for _, v in pairs(shootButton:GetDescendants()) do
        if v:IsA("Script") or v:IsA("LocalScript") then
            v.Disabled = false
        end
    end

    getgenv().AutoPerfectToggle = false
    warn("Auto Perfect: Disabled")
    return
end

getgenv().AutoPerfectToggle = true

local UserInputService = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local shootButton = playerGui:WaitForChild("Mobile"):WaitForChild("Offense"):WaitForChild("Shoot")
local ShootEvent = ReplicatedStorage:WaitForChild("Events"):WaitForChild("Shoot")

-- Disable all scripts in shootButton
for _, v in pairs(shootButton:GetDescendants()) do
    if v:IsA("Script") or v:IsA("LocalScript") then
        v.Disabled = true
    end
end

-- Disconnect all existing events on shootButton
local function disconnectAllEvents(obj)
    for _, conn in pairs(getconnections(obj.MouseButton1Click)) do
        conn:Disconnect()
    end
    for _, conn in pairs(getconnections(obj.Activated)) do
        conn:Disconnect()
    end
end
pcall(disconnectAllEvents, shootButton)

local function FireInstantDoubleShot()
    ShootEvent:FireServer(true, 100, nil, false)
    task.delay(0.5, function()
        ShootEvent:FireServer(false, -0.98, true)
    end)
end

getgenv().AutoPerfectConnections = {}

-- Hook MouseButton1Down
table.insert(getgenv().AutoPerfectConnections, shootButton.MouseButton1Down:Connect(FireInstantDoubleShot))

-- Hook keyboard/gamepad input
table.insert(getgenv().AutoPerfectConnections, UserInputService.InputBegan:Connect(function(input, processed)
    if processed then return end
    if input.KeyCode == Enum.KeyCode.E or input.KeyCode == Enum.KeyCode.ButtonX or input.KeyCode == Enum.KeyCode.ButtonSquare then
        FireInstantDoubleShot()
    end
end))

warn("Auto Perfect: Enabled")
